<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:id="@+id/schedule_item_layout">

    <LinearLayout
        android:padding="12dp"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/border_schedules">
        <TextView
            android:id="@+id/tvCaHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/g_bold"
            android:text="Ca: 5"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvPhong"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/g_light"
            android:text="PhÃ²ng: T305"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNgay"
            android:text="20/05/2023"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/g_light"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/tvMonHoc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/g_bold"
            android:lines="2"
            android:text="ANDROID NETWORKING"
            android:textColor="@color/colorSecondary"
            android:textSize="35dp" />
    </LinearLayout>

</LinearLayout>